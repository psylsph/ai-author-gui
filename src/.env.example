# AI Story Author Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_BASE_URL=https://api.openai.com/v1

# DeepSeek API Configuration
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
VITE_DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenRouter API Configuration (Free models)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here
VITE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default Configuration
VITE_DEFAULT_MODEL=meta-llama/llama-3.3-70b-instruct:free
VITE_DEFAULT_BASE_URL=https://openrouter.ai/api/v1
VITE_DEFAULT_STREAM=true
VITE_DEFAULT_CHAPTER_WORD_TARGET=3000

# Application Settings
VITE_APP_TITLE=AI Story Author